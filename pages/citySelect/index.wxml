<block wx:if="{{isShowLetter}}">
    <view class="showSlectedLetter">
        {{showLetter}}
    </view>
</block>
<view class="searchLetter touchClass" >
    <view wx:for="{{searchLetter}}" style="height:{{itemH}}px" wx:key="index" catchtap='searchStart'  data-letter="{{item}}" >{{item}}</view>
</view>
<scroll-view scroll-y="true" style="height:{{winHeight}}px" scroll-with-animation="{{true}}"  scroll-into-view="{{showLetter}}">
    <view class="selection" wx:for="{{cityList}}" wx:key="{{item.initial}}"  id="{{item.initial}}">
        <block wx:if="{{index===0}}" >
            <view class="hot-item">
                <text class="hot-text" >热门城市</text>
                <view class='hot-city-column'>
                    <view class="hot-city" data-text="北京" bindtap = "wxSortPickerViewItemTap">北京</view>
                    <view class="hot-city" data-text="上海" bindtap = "wxSortPickerViewItemTap">上海</view>
                    <view class="hot-city" data-text="天津" bindtap = "wxSortPickerViewItemTap">天津</view>
                    <view class="hot-city" data-text="广州" bindtap = "wxSortPickerViewItemTap">广州</view>
                    <view class="hot-city" data-text="成都" bindtap = "wxSortPickerViewItemTap">成都</view>
                    <view class="hot-city" data-text="杭州" bindtap = "wxSortPickerViewItemTap">杭州</view>
                    <view class="hot-city" data-text="深圳" bindtap = "wxSortPickerViewItemTap">深圳</view>
                    <view class="hot-city" data-text="苏州" bindtap = "wxSortPickerViewItemTap">苏州</view>
                    <view class="hot-city" data-text="重庆" bindtap = "wxSortPickerViewItemTap">重庆</view>
                    <view class="hot-city" data-text="武汉" bindtap = "wxSortPickerViewItemTap">武汉</view>
                    <view class="hot-city" data-text="厦门" bindtap = "wxSortPickerViewItemTap">厦门</view>
                    <view class="hot-city" data-text="南京" bindtap = "wxSortPickerViewItemTap">南京</view>
                </view>
            </view>
            <view class='item_letter'>当前定位</view>
              <view class='item_city'>
                <image class='point' src='/images/city/point.png'></image>
                <view class='current-city flex-sub'>广州市</view>
                <view class='flex-right'>
                  <image class='chose' src='/images/city/chose.png'></image>
                </view>
              </view>
        </block>
        <view class="item_letter">{{item.initial}}</view>
        <view class="item_city" wx:for="{{item.cityInfo}}" wx:for-item="ct" wx:key="{{ct.id}}" wx:for-index="idx"  data-text="{{ct.city}}" bindtap = "wxSortPickerViewItemTap">
            <view class='flex-sub'>{{ct.city}}</view>
            <view class='flex-right'>
               <image class='chose' src='/images/city/chose.png'></image>
            </view>
           
        </view>
    </view>
</scroll-view>