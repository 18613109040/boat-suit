@import '/app.wxss';
.prod-item{
  margin: 24rpx 32rpx 0rpx 32rpx;
  background-color: #FFFFFF;
  border-radius: 6px;
  padding-top: 32rpx ;

}
.prod-top{
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 32rpx;
}
.line{
  display: flex;
  align-items: center;
 
}
.prod-image{
  width: 56rpx;
  height: 56rpx;
}
.prod-name{
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #181C28;
  flex: 1;
  margin-left: 16rpx;
}
.prod-range{
  font-family: DINCond-Bold;
  font-size: 40rpx;
  color: #FF555F;
}
.range-des{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #7F8593;
  text-align: right;
  margin-bottom: 10rpx;
}
.flex-sub{
  flex: 1;
  display: flex;
  align-items: center;
}
.info{
  flex: 1;
}
.info-title{
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #7F8593;
}
.info-value{
  font-family: PingFangSC-Medium;
font-size: 26rpx;
color: #181C28;
margin-top: 3rpx;

}
.apply-btn{
  background: #4283F4;
border-radius: 6rpx;
  width: 144rpx;
  height: 48rpx;
  font-family: PingFangSC-Regular;
font-size: 22rpx;
color: #FFFFFF;
line-height: 48rpx;
text-align: center;

}
.prod-bootom {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.tag-approve{
  background: rgba(66,131,244,0.05);
  border: 1px solid rgba(66,131,244,0.20);
  border-radius:4rpx;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #4283F4;
  text-align: justify;
  line-height: 20rpx;
  margin-right: 10rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
}
.tag-prod{
  margin-right: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #15B0A0;
  border: 1px solid #B4ECE6;
  border-radius: 4rpx;
  text-align: justify;
  line-height: 20rpx;
   padding: 5rpx 10rpx 5rpx 10rpx;
}