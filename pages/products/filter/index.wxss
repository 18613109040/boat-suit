  color: transparent;
} */

.footer-bar {
  margin-top: 36rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 64rpx;
}

.reset-btn {
  background: rgba(66, 131, 244, 0.05);
  border: 1px solid rgba(66, 131, 244, 0.45);
  border-radius: 6rpx;
  width: 327rpx;
  height: 88rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #4283f4;
  text-align: center;
  line-height: 88rpx;
}

.enter-btn {
  background: #4283f4;
  border-radius: 6rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  width: 327rpx;
  line-height: 88rpx;
  height: 88rpx;
}
.range-number{
  width: 686rpx;
  margin-left: 32rpx;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border: 1px solid #D0D2D8;
  border-radius: 6px;
  height: 64rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  margin-top: 24rpx;
}