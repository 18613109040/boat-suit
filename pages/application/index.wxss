page{
  background: #FFFFFF;
}
.btn{
  background: rgba(81,199,91,0.87);
  border-radius: 6rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  width: 686rpx;
  height: 88rpx;
}
.footer-btn{
  background: #FFFFFF;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.form-group{
  background-color: #fff;
  padding:32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}
 .title {
  text-align: justify;
  padding-right: 30rpx;
  font-size: 32rpx;
  color: #181C28;

}
picker {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.picker {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #7F8593;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  flex: 1;
   justify-content: flex-end;
  text-align: right;
  display: flex;
  align-items: center;
}
.picker-text{
  margin-right: 16rpx;
}
.line{
  background-color: #fff;
  padding:32rpx;
  display: flex;
  align-items: center;
}
.tag{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #181C28;
  padding: 13rpx 32rpx 13rpx 32rpx;
  background: #F4F4F6;
  border-radius: 6rpx;
  margin-right: 16rpx;
}
.col{
  padding: 32rpx;
}
.col-title{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #7F8593;
}
.col-tag{
  width: 686rpx;
  margin: 24rpx auto;
  font-family: PingFangSC-Regular;
font-size: 26rpx;
color: #B3AC98;
text-align: center;
  background: #FFF9E8;
  border: 1px solid #EDE4CC;
  border-radius: 6rpx;
  height: 64rpx;
  line-height: 64rpx;
}
.input-text{
  flex: 1;
  font-size: 32rpx;
}
.raiders{
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.raiders-icon{
  width: 40rpx;
  height: 40rpx;
}
.raiders-text{
  font-family: PingFangSC-Regular;
font-size: 24rpx;
color: #4283F4;
}
.phone{
  padding: 32rpx;
}
.phone-number{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #7F8593;
  margin-bottom: 24rpx;
}
.get-viter{
  background: #4283F4;
  border-radius: 0 6rpx 6rpx 0;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #FFFFFF;
  width: 194rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;

}
.input-phone{
 flex: 1;
  height: 64rpx;
  border: 1px solid #D0D2D8;
  border-radius: 6rpx 0 0 6rpx;
}
.phone-content{
  display: flex;
  align-items: center;
}